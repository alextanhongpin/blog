---
layout: layout.njk
---

<article>
	<h1> {{ title }} </h1>
	<p class='post-subheader'>
		<small>Posted {{ page.date | formatDate }} (Last updated: {% lastUpdatedAt %})</small>
		<small>{{ content | readingTime }}</small>
	</p>

	<div class='tags'>
		{%- for tag in tags | cleanTags -%}
		<a class='tag' href='{{tag | tagURL | url}}'>{{tag}}</a>
		{%- endfor -%}
	</div>

	{{ content | safe }}
</article>
